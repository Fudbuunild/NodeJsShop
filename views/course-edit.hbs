<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
          <input id="price" type="text" name="title" class="validate" required value="{{course.title}}">
          <label for="price">Name Course</label>
          <span class="helper-text" data-error="Write Name" data-success="right"></span>
        </div>
    <div class="input-field">
          <input id="price" type="text" name="price" class="validate" required min="1" value="{{course.price}}">
          <label for="price">Price Course</label>
          <span class="helper-text" data-error="Write Price"></span>
        </div>
    <div class="input-field">
          <input id="img" type="text" name="img" class="validate" required value="{{course.img}}">
          <label for="img">URL Image</label>
          <span class="helper-text" data-error="Write Url Image" data-success="right"></span>
        </div>  

    <input type="hidden" name="id" value="{{course.id}}"> 
    <input type="hidden" name="_csrf" value="{{csrf}}">   

   <button type="submit" class="btn btn-primary">Edit Course</button>          
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">   
  <button class="btn red">Delete Course</button>
</form>