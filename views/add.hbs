<h1>Add new Course</h1>

<form action="/add" method="POST">
    <div class="input-field">
          <input id="price" type="text" name="title" class="validate" required>
          <label for="price">Name Course</label>
          <span class="helper-text" data-error="Write Name" data-success="right">Helper text</span>
        </div>
    <div class="input-field">
          <input id="price" type="text" name="price" class="validate" required min="1">
          <label for="price">Price Course</label>
          <span class="helper-text" data-error="Write Price"></span>
        </div>
    <div class="input-field">
          <input id="img" type="text" name="img" class="validate" required>
          <label for="img">URL Image</label>
          <span class="helper-text" data-error="Write Url Image" data-success="right">Helper text</span>
        </div>  

    <input type="hidden" name="_csrf" value="{{csrf}}">   

    <button class="btn btn-primary">Add Course</button>          
</form>